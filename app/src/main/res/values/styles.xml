<resources>
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textDirection">locale</item>
        <item name="colorPrimary">?android:attr/textColorPrimary</item>
        <item name="colorSecondary">?android:attr/colorSecondary</item>
        <item name="android:statusBarColor">?android:attr/statusBarColor</item>
    </style>

    <style name="Divider" >
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>